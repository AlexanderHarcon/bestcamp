| {block 'header'}
| {parent}
//-************_slide_*************//
.slide-bl
    .slide.wrapper.pd_lr_block
        .slide-header
            .slide__head
                h1.head_h1 {$res.pagetitle}
            .slide__slogan.head_slogan
                p {$res.txt_slogan}
| {/block}

| {block 'main'}
//-************_Form_*************//
.request-bl
    .request.wrapper.pd_block
        .request__body
            p.head_slogan.head_slogan--mini.request__head {$res.txt_head_form}
            | {include 'file:sportcamps/form/form.tpl'
            | form='@FILE sportcamps/home/tpl_form_header.html'
            | pagetitle_res=$res.pagetitle
            | validate='workemail:blank,email:required:email:minLength=^6^:maxLength=^100^,dateFrom:isDate=^%d-%m-%Y^,,dateTo:isDate=^%d-%m-%Y^,number_athletes:required:isNumber:minValue=^1^:maxValue=^99^,,number_coaches:required:isNumber:minValue=^1^:maxValue=^99^,sport_type:required:minLength=^3^:maxLength=^40^:stripTags'}


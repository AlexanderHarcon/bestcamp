mixin tableArrow(isOpen)
    .arrow-table_js(class={'rotated': isOpen})

mixin headers()
    .infr__table__head
        img.infr__table__img(src=pathImg + 'minipool.svg' alt='mini pool')
        h4.infr__table__text Olympic Swimming pool

mixin tableRow(isOpen)
    dl.parameters.parameters--lt
        div
            dt Lines
            dd 6
        div
            dt Length
            dd 25m
        div
            dt Width
            dd 20m
        div
            dt Depth
            dd 2m
        div
            dt Indoor/Outdoor
            dd Indoor
    +tableArrow(isOpen)

mixin optionsList(isOpen)
    .infr__table__info.infr__table__info--lt.infr__table__info_js(class={'visible': isOpen})
        ul.infr__table__list.infr__table__list--lt
            li Option Lorem ipsum.
                span (101)
            li Option
                span (101)
            li Option Lorem ipsum dolor sit amet. lorem
                span (101)
            li Option
                span (101)
            li Option
                span (101)
            li.disabled Option
                span (101)
            li.disabled Option
                span (101)
            li.disabled Option
                span (101)
        p.content Access to the gym is included in the price of the Gloria Sport Arena packages. Access to the gym is included in the price of the Gloria Sport Arena packages.

mixin headersFintess()
    .infr__table__head
        h4.infr__table__text Gym Hall

mixin tableRowFitness(isOpen)
    dl.parameters.parameters--lt
        //div
        //    dt Lines

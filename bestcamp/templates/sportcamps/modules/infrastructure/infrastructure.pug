        div
            dt Length
            dd 25m
        div
            dt Width
            dd 20m
        div
            dt Depth
            dd 2m
        div
            dt Indoor/Outdoor
            dd Indoor
    +tableArrow()

mixin equipmentListItem
    li 01 Name of equipment for an Olympic swimming pool
        span (3)


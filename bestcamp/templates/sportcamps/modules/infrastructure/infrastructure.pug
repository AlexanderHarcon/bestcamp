mixin tableArrow()
    .arrow-table

mixin headers()
    .infr__table__head
        img.infr__table__img(src=pathImg + 'minipool.svg' alt='mini pool')
        h4.infr__table__text Olympic Swimming pool

mixin tableRow(isOpen)
    dl.infr__table__param.infr__table__param--lt
        div
            dt Lines
            dd 6
        div
            dt Length
            dd 25m
        div
            dt Width
            dd 20m
        div
            dt Depth
            dd 2m
        div
            dt Indoor/Outdoor
            dd Indoor
        +tableArrow()

mixin optionsList()
    .infr__table__info.infr__table__row(class={'visible': isOpen})
        ul.infr__table__list
            li Option Lorem ipsum.
